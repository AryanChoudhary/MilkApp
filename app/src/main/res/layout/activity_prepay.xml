<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrepayActivity"
    android:background="@color/colorPrimary"
    >

    <TextView
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="40sp"
        android:text="PrePay"
        android:textColor="@color/colorWhite"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/typoupright_bt"
        />

    <TextView
        android:id="@+id/daytime"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        android:textColor="@color/colorWhite"
        android:fontFamily="@font/ariali"
        android:text="10:10am/pm, 12 may 2018, 30C"
        app:layout_constraintTop_toTopOf="@+id/home"
        app:layout_constraintBottom_toBottomOf="@+id/home"/>



    <TextView
        android:id="@+id/btSubsPresentMonth"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/roundedcorner_text"
        android:fontFamily="@font/optionyx"
        android:textAlignment="center"
        android:text="Subscribe present month:"
        android:textColor="@color/colorPrimary"
        android:textSize="23sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/daytime"
        tools:layout_editor_absoluteY="124dp" />

    <TextView
        android:id="@+id/btSubs15days"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedcorner_text"
        android:fontFamily="@font/optionyx"
        android:textAlignment="center"
        android:text="Subscribe for 15 days:"
        app:layout_constraintTop_toBottomOf="@id/btSubsPresentMonth"
        app:layout_constraintBottom_toTopOf="@id/btSubs10days"
        android:textColor="@color/colorPrimary"
        android:textSize="23sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp" />


    <TextView
        android:id="@+id/btSubs10days"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="Subscribe for 10 days:"
       android:textAlignment="center"
        android:fontFamily="@font/optionyx"
        app:layout_constraintTop_toBottomOf="@+id/btSubs15days"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/roundedcorner_text"
        android:textSize="23sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/btSubs3days"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="Subscribe for 3 days:"
        android:textAlignment="center"
        android:fontFamily="@font/optionyx"
        app:layout_constraintTop_toBottomOf="@+id/btSubs10days"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/roundedcorner_text"
        android:textSize="23sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/delivertTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btSubsOneday"
        android:textColor="@color/colorWhite"
        android:text="Free Home Delivery For One Whom We Love."
        android:fontFamily="@font/typoupright_bt"
        android:layout_marginTop="30dp"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/btSubsOneday"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="Subscribe for one day"
       android:textAlignment="center"
        android:fontFamily="@font/optionyx"
        app:layout_constraintTop_toBottomOf="@+id/btSubs3days"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/roundedcorner_text"
        android:textSize="23sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimary"/>





</android.support.constraint.ConstraintLayout>