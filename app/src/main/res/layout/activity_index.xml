<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".IndexActivity">

    <TextView
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="40sp"
        android:text="@string/home"
        android:textColor="@color/colorWhite"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/typoupright_bt"
        />

    <TextView
        android:id="@+id/daytime"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        android:textColor="@color/colorWhite"
        android:fontFamily="@font/ariali"
        android:text="10:10am/pm, 12 may 2018, 30C"
        app:layout_constraintTop_toTopOf="@+id/home"
        app:layout_constraintBottom_toBottomOf="@+id/home"/>



    <TextView
        android:id="@+id/dailytrack"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/roundedcorner_text"
        android:fontFamily="@font/optionyx"
        android:gravity="center"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:text="Daily Track"
        android:textColor="@color/colorPrimary"
        android:textSize="35sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@+id/daytime"
        tools:layout_editor_absoluteY="124dp" />

    <TextView
        android:id="@+id/Pay"
        android:layout_width="270dp"
        android:layout_height="52dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/roundedcorner_text"
        android:fontFamily="@font/optionyx"
        android:gravity="center"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:text="Pay"
        android:textColor="@color/colorPrimary"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@id/otherproduct"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dailytrack"
        app:layout_constraintVertical_chainStyle="spread_inside" />


    <TextView
        android:id="@+id/otherproduct"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="Other Products"
        android:gravity="center"

        android:fontFamily="@font/optionyx"
        app:layout_constraintTop_toBottomOf="@+id/Pay"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/roundedcorner_text"
        android:textSize="35sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/contactus"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="Conatct Us"

        android:gravity="center"
        android:fontFamily="@font/optionyx"
        app:layout_constraintTop_toBottomOf="@+id/otherproduct"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/roundedcorner_text"
        android:textSize="35sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimary"/>
    <TextView
        android:id="@+id/delivertTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contactus"
        android:textColor="@color/colorWhite"
        android:text="Free Home Delivery For One Whom We Love."
        android:fontFamily="@font/typoupright_bt"
        android:layout_marginTop="30dp"
        android:textSize="22sp"/>





</android.support.constraint.ConstraintLayout>