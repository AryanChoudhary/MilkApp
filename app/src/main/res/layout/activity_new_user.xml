<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".NewUserActivity">

    <TextView
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="40sp"
        android:text="New User"
        android:textColor="@color/colorWhite"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/typoupright_bt"
        />

    <TextView
        android:id="@+id/daytime"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        android:textColor="@color/colorWhite"
        android:fontFamily="@font/ariali"
        android:text="10:10am/pm, 12 may 2018, 30C"
        app:layout_constraintTop_toTopOf="@+id/home"
        app:layout_constraintBottom_toBottomOf="@+id/home"/>



    <TextView
        android:id="@+id/dailytrack"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/roundedcorner_text"
        android:fontFamily="@font/optionyx"
        android:paddingLeft="20dp"
        android:text="Name:"
        android:textColor="@color/colorPrimary"
        android:textSize="23sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/daytime"
        tools:layout_editor_absoluteY="124dp" />

    <TextView
        android:id="@+id/Pay"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedcorner_text"
        android:fontFamily="@font/optionyx"
        android:paddingLeft="20dp"
        android:text="Email:"
        app:layout_constraintTop_toBottomOf="@id/dailytrack"
        app:layout_constraintBottom_toTopOf="@id/otherproduct"
        android:textColor="@color/colorPrimary"
        android:textSize="23sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp" />


    <TextView
        android:id="@+id/otherproduct"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="Phone:"
        android:paddingLeft="20dp"
        android:fontFamily="@font/optionyx"
        app:layout_constraintTop_toBottomOf="@+id/Pay"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/roundedcorner_text"
        android:textSize="23sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/address"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="     I stay at(address):"
        android:fontFamily="@font/optionyx"
        app:layout_constraintTop_toBottomOf="@+id/otherproduct"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/roundedcorner_text"
        android:textSize="23sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/delivertTV"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/typoupright_bt"
        android:text="Free Home Delivery For One Whom We Love."
        android:textColor="@color/colorWhite"
        android:textSize="22sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quantity" />

    <TextView
        android:id="@+id/birthdday"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="I was born on(Date of Birth)"
        android:paddingLeft="20dp"
        android:fontFamily="@font/optionyx"
        app:layout_constraintTop_toBottomOf="@+id/address"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/roundedcorner_text"
        android:textSize="23sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimary"/>


    <TextView
        android:id="@+id/milkkind"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="Choose my kind of milk:"
        android:paddingLeft="20dp"
        android:fontFamily="@font/optionyx"
        app:layout_constraintTop_toBottomOf="@+id/birthdday"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/roundedcorner_text"
        android:textSize="23sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimary"/>


    <TextView
        android:id="@+id/quantity"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="Quantity:"
        android:fontFamily="@font/optionyx"
        android:paddingLeft="20dp"
        app:layout_constraintTop_toBottomOf="@+id/milkkind"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/roundedcorner_text"
        android:textSize="23sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimary"/>





</android.support.constraint.ConstraintLayout>